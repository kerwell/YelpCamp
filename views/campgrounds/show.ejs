<% layout('./layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3 mb-3">
        <div class="card">
            <img src="<%= campground.image %>" alt="picture of campground">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-secondary"><%= campground.location %></li>
              <li class="list-group-item">$<%= campground.price %>/night</li>
              <li class="list-group-item"><%= campground.price %></li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-primary"href="/campgrounds/<%= campground._id %>/edit">Edit Campground</a>
                <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete Campground</button>
                </form>
            </div>
            <div class="card-footer text-secondary">
                2 days ago
            </div>
          </div>
          <h2>Leave A Review</h2>
          <form class="mb-3" action="">
            <div class="mb-3">
              <label class="form-label" for="rating">Ratings</label>
              <!-- 'form-label is bootstrap' -->
              <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
              <!-- 'form-range is bootstrap' -->
            </div>
            <div class="mb-3">
              <label class="form-label" for="reviewBody">Review</label>
              <!-- form label is also for some style formatting -->
              <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
              <!-- form control is bootstrap. it seems to fit and make responsive -->
            </div>
            <button class="btn btn-success">Submit</button>
          </form>
    </div>
</div>
